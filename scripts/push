#!/usr/bin/perl

use strict;
use warnings;

use v5.14;

`yarn lint` or die "Linting failed!";
`yarn build` or die "Build failed!";
`yarn test` or die "Test failed!";

say "Done ğŸ˜Š! Now it's just git pushing...";
