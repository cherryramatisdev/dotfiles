#!/bin/sh

case $1 in
 personal) i3-msg 'workspace 2; exec /usr/bin/google-chrome-stable --profile-directory="Default" --new-window' ;;
 hagens) i3-msg 'workspace 2; exec /usr/bin/google-chrome-stable --profile-directory="Profile 1" --new-window https://web.whatsapp.com' && i3-msg 'workspace 2; exec /usr/bin/google-chrome-stable --profile-directory="Profile 1" --new-window https://houseofhagens.slack.com' ;;
 lami) i3-msg 'workspace 2; exec /usr/bin/google-chrome-stable --profile-directory="Profile 3" --new-window https://web.whatsapp.com' && i3-msg 'workspace 2; exec /usr/bin/google-chrome-stable --profile-directory="Profile 3" --new-window https://lamigrupo.slack.com' ;;
 *) echo 'Opcao invalida' ;;
esac

