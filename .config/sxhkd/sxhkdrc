#
# wm independent hotkeys

# terminal emulator
super + Return
	alacritty

# program launcher
super + @space
	dmenu_run -l 30

# make sxhkd reload its configuration files:
super + r
	pkill -USR1 -x sxhkd

# launch stuff
super + o ; {b, c, q, t}
      {brave, google-chrome-stable, qutebrowser, inkdrop}

# download music from youtube
alt + y
    alacritty -e /home/cherry/bin/ytdownload

# open video from youtube
super + alt + y
    ytopen

# open youtube finder on dmenu
super + y
    ytfzf -DN

# open youtube finder on terminal
super + shift + y
    alacritty -e ytfzf -tN

# switch language
super + F1
      switchkeyboardlanguage

# open password manager
super + p
    passmenu

# open music player
super + m
    alacritty -e ncmpcpp

# open pavucontrol
super + v
    pavucontrol

# print
Print
      flameshot gui

# control audio

XF86AudioPlay
    mpc toggle

XF86AudioLowerVolume
	pactl -- set-sink-volume 0 -10%

XF86AudioRaiseVolume
	pactl -- set-sink-volume 0 +10%
